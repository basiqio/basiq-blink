{
    "root": true,
    "env": {
        "browser": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": "off",
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-global-assign": "warn",
        "no-console": "warn"
    },
    "globals": {
        "require": true
    }
}